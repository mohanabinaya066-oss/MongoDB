<!DOCTYPE html>
<html>
<head>
  <title>Product Catalog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <div class="text-center mb-4">
      <h1 class="display-5 fw-bold text-primary">üõçÔ∏è Product Catalog</h1>
      <a href="/add" class="btn btn-success mt-3">‚ûï Add New Product</a>
    </div>

    <table class="table table-striped table-hover shadow">
      <thead class="table-primary">
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th>Price</th>
          <th>Description</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.category %></td>
            <td>‚Çπ<%= product.price %></td>
            <td><%= product.description %></td>
            <td>
              <form action="/delete/<%= product._id %>" method="POST" style="display:inline;">
                <button class="btn btn-danger btn-sm">üóëÔ∏è Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
